{% extends "base.html.twig" %}

{% block body %}
  <h1>Categories</h1>
  <div class="products">
    {% for category in categories %}
        <a href="{{ path('singleCategory', {id: category.id}) }}" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
          {{ category.name }}
        </a>
    {% endfor %}
  </div>
{% endblock %}
