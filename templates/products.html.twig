{% extends "base.html.twig" %}

{% block body %}
  <h1>Products</h1>
  <div class="products">
  {% for product in products %}
      <div class="demo-card-square mdl-card mdl-shadow--2dp product">
        <div class="mdl-card__title mdl-card--expand">
          <img src="/uploads/{{ product.image }}" />
          <h2 class="mdl-card__title-text">{{ product.name }}</h2>
        </div>
        <div class="mdl-card__supporting-text content">
          <span class="mdl-card__title-text">{{ product.category }}</span>
          <span class="mdl-chip price">
              <span class="mdl-chip__text">{{ product.price / 100 }} â‚¬</span>
          </span>
          <p class="description">
            <!-- {{ product.description|length > 50 ? product.description|slice(0, 50) ~ '...' : product.description | raw  }} -->
          </p>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a href="{{ path('singleProduct', {id: product.id}) }}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            Voir le produit
          </a>
        </div>
      </div>
  {% endfor %}
</div>
{% endblock %}
